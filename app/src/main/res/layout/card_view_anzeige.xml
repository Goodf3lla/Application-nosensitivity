<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:descendantFocusability="blocksDescendants"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/outline_black_inside_green"
        android:descendantFocusability="blocksDescendants"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView
            android:id="@+id/first_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="2dp"
            android:src="@drawable/first_logo" />

        <TextView
            android:id="@+id/row_anzeige_restaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/first_logo"
            android:layout_toRightOf="@+id/first_logo"
            android:padding="5dp"
            android:text="RestaurantName" />

        <TextView
            android:id="@+id/row_anzeige_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/row_anzeige_userId"
            android:text="anzeigeID" />

        <TextView
            android:id="@+id/row_anzeige_userId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/first_logo"
            android:padding="2dp"
            android:text="userID" />

        <TextView
            android:id="@+id/row_anzeige_adresse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_anzeige_text"
            android:layout_toEndOf="@+id/first_logo"
            android:layout_toRightOf="@+id/first_logo"
            android:padding="5dp"
            android:text="adresse" />

        <TextView
            android:id="@+id/row_anzeige_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/first_logo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/row_anzeige_restaurantName"
            android:layout_toEndOf="@+id/first_logo"
            android:layout_toRightOf="@+id/first_logo"
            android:padding="5dp"
            android:text="Text" />

        <TextView
            android:id="@+id/row_anzeige_lifetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:padding="2dp"
            android:text="lifetime" />

        <TextView
            android:id="@+id/row_anzeige_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/row_anzeige_id"
            android:text="tags" />
    </RelativeLayout>
</android.support.v7.widget.CardView>